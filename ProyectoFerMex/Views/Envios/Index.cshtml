
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEnvios.cshtml";
}

@{

    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    String mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos dias: ";

    }
    if ((hora >= 12) && (hora < 19))
    {
        mensaje = " Buenas tardes: ";
    }
    if (hora >= 19)
    {
        mensaje = "Buenos noches: ";

    }
    String name = Session["usr"].ToString();

}


<h2>@mensaje @name</h2>

